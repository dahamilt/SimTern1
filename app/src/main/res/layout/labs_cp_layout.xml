<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/labs_cp_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fishboneCpImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/cp" />
    
    <TextView
        android:id="@+id/coagulation_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fishboneCpImageView"
        android:text="Coagulation Panel" />
    
    <TextView
        android:id="@+id/pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fishboneCpImageView"
        android:layout_alignTop="@+id/fishboneCpImageView"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:text="pt"  
        android:textSize="8dp"/>   
        
    <TextView
        android:id="@+id/ptt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fishboneCpImageView"
        android:layout_alignTop="@+id/fishboneCpImageView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:text="ptt"  
        android:textSize="8dp"/>      

    <TextView
        android:id="@+id/inr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fishboneCpImageView"
        android:layout_alignTop="@+id/fishboneCpImageView"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:text="inr"  
        android:textSize="8dp"/>

    
</RelativeLayout>